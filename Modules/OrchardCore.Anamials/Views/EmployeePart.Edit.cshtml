    <label asp-for="Address">@T["Employee Address"]<span asp-validation-for="Address"></span></label>
    <input asp-for="Address" class="form-control" />
    <span class="hint">@T["Employee Address"]</span>
</fieldset>

<fieldset class="form-group" asp-validation-class-for="City">
    <label asp-for="City">@T["Employee City"]<span asp-validation-for="City"></span></label>
    <input asp-for="City" class="form-control" />
    <span class="hint">@T["Employee City"]</span>
</fieldset>

<fieldset class="form-group" asp-validation-class-for="State">
    <label asp-for="State">@T["Employee State"]<span asp-validation-for="State"></span></label>
