@model EmployeePartViewModel
@using OrchardCore.GreenHouse.ViewModels

<fieldset class="form-group" asp-validation-class-for="FirstName">
    <label asp-for="FirstName">@T["Employee Name"]<span asp-validation-for="FirstName"></span></label>
    <input asp-for="FirstName" class="form-control" />
    <span class="hint">@T["Employee Name"]</span>
</fieldset>

