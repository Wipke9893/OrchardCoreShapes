<fieldset class="form-group" asp-validation-class-for="Country">
    <label asp-for="Country">@T["Country"]</label>
    <select asp-for="Country" class="form-select" asp-items="Model.Countries"></select>
    <span class="hint">@T["Country"]</span>
    <span asp-validation-for="Country"></span>
</fieldset>

